<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/surface">

        <!-- Hình ảnh sản phẩm -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_margin="8dp">
            
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">
                
                <ImageView
                    android:id="@+id/gridImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/shoe_placeholder" />
                    
            </com.google.android.material.card.MaterialCardView>
            
            <!-- Discount Badge -->
            <TextView
                android:id="@+id/badgeDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F44336"
                android:textColor="@android:color/white"
                android:text="-34%"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:layout_gravity="top|end"
                android:visibility="gone"/>
                
        </FrameLayout>

        <!-- Phần thông tin -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="12dp"
            android:paddingBottom="12dp">

            <!-- Tên sản phẩm -->
            <TextView
                android:id="@+id/gridText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:text="Tên Giày"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:gravity="top"/>

            <!-- Giá tiền và Giá gốc -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">
                
                <TextView
                    android:id="@+id/gridPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="91.740đ"
                    android:textSize="16sp"
                    android:textColor="#F44336"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp"
                    android:maxLines="1"/>
                    
                <TextView
                    android:id="@+id/gridOriginalPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="139.000đ"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:background="@drawable/strike_through_line" 
                    android:visibility="gone"
                    android:maxLines="1"
                    android:ellipsize="end"/>
            </LinearLayout>
            
            <!-- Đánh giá và Đã bán -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_rating"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="1dp"
                    android:gravity="center_vertical">
                    
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@android:drawable/btn_star_big_on"
                        app:tint="#FFC107" />

                    <TextView
                        android:id="@+id/gridRatingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:text="4.9"
                        android:textColor="#FFC107"
                        android:textSize="12sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="12dp"
                    android:background="@color/text_secondary"
                    android:layout_marginHorizontal="6dp"/>

                <TextView
                    android:id="@+id/gridSoldText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đã bán 1k+"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>