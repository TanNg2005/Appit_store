<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Hình ảnh sản phẩm (Nền trắng để ảnh đẹp nhất) -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@android:color/white">
            
            <ImageView
                android:id="@+id/gridImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:padding="12dp" 
                android:src="@drawable/shoe_placeholder" />
            
            <!-- Discount Badge -->
            <TextView
                android:id="@+id/badgeDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_discount_badge"
                android:textColor="@android:color/white"
                android:text="-34%"
                android:textSize="11sp"
                android:textStyle="bold"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:layout_gravity="top|start"
                android:layout_margin="8dp"
                android:visibility="gone"/>
                
        </FrameLayout>

        <!-- Phần thông tin: Sử dụng màu nền riêng biệt đã định nghĩa trong colors.xml -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/product_card_info_background" 
            android:padding="12dp">

            <!-- Tên sản phẩm -->
            <TextView
                android:id="@+id/gridText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:text="Tên Giày"
                android:textSize="15sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:gravity="top"/>

            <!-- Giá tiền và Giá gốc -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">
                
                <!-- SỬA: Sử dụng màu @color/price_text thay vì @color/accent -->
                <TextView
                    android:id="@+id/gridPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="91.740đ"
                    android:textSize="16sp"
                    android:textColor="@color/price_text" 
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp"/>
                    
                <TextView
                    android:id="@+id/gridOriginalPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="139.000đ"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:background="@drawable/strike_through_line" 
                    android:visibility="gone"
                    android:maxLines="1"
                    android:ellipsize="end"/>
            </LinearLayout>
            
            <!-- Đánh giá và Đã bán -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@android:drawable/btn_star_big_on"
                        app:tint="#FFC107" />

                    <TextView
                        android:id="@+id/gridRatingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="4.9"
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="10dp"
                    android:background="@color/text_secondary"
                    android:layout_marginHorizontal="8dp"/>

                <TextView
                    android:id="@+id/gridSoldText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đã bán 1k+"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>