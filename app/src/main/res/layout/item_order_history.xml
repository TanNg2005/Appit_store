<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: Ngày đặt và Trạng thái -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/history_order_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ngày đặt: 20/05/2024"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/history_order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đang giao hàng"
                android:textStyle="bold"
                android:textColor="@color/purple_500" />
        </LinearLayout>
        
        <!-- Địa chỉ nhận hàng -->
        <TextView
            android:id="@+id/history_shipping_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Giao đến: ..."
            android:textColor="@color/text_secondary"
            android:textSize="13sp"
            android:maxLines="2"
            android:ellipsize="end"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- Thông tin sản phẩm đầu tiên (Ảnh + Tên + Giá) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/history_product_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/shoe_placeholder"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.MaterialComponents.MediumComponent"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/history_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên sản phẩm..."
                    android:textColor="@color/text_primary"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                 <TextView
                    android:id="@+id/history_more_items"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="và 2 sản phẩm khác"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:visibility="gone"/>
            </LinearLayout>

             <TextView
                android:id="@+id/history_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.500.000 đ"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </LinearLayout>

        <!-- Nút hủy đơn hàng -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="12dp"
            android:text="Hủy đơn hàng"
            android:textColor="@android:color/white"
            app:backgroundTint="#D32F2F"
            android:textSize="12sp"
            android:visibility="gone"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>